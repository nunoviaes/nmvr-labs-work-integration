{
  "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "tag-environment": {
      "type": "string",
      "metadata": {
        "description": "Name of the environment for the tag object"
      }
    },
    "tag-projectName": {
      "type": "string",
      "metadata": {
        "description": "Name of the project for the tag object"
      }
    },
    "tag-resourceTags": {
      "type": "object",
      "defaultValue": {
        "Environment": "[parameters('tag-environment')]",
        "ProjectName": "[parameters('tag-projectName')]",
        "CreationDate": "[utcNow()]"
      }
    },
    "rg-name": {
      "type": "string",
      "metadata": {
        "description": "Name of the resource group to create"
      }
    },
    "rg-location": {
      "type": "string",
      "metadata": {
        "description": "Location for the resource group to create"
      }
    }
  },
  "functions": [
  ],
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Resources/resourceGroups",
      "apiVersion": "2019-10-01",
      "name": "[parameters('rg-name')]",
      "location": "[parameters('rg-location')]",
      "tags": "[parameters('tag-resourceTags')]",
      "properties": {
      }
    }
  ],
  "outputs": {
    "rg-name-output": {
      "type": "string",
      "value": "[parameters('rg-name')]"
    },
    "rg-location-output": {
      "type": "string",
      "value": "[parameters('rg-location')]"
    }
  }
}